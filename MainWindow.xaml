<Window x:Class="Hollywood_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hollywood_Editor"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Hollywood Editor" Height="600" Width="850" Icon="/logo.ico">

    <Grid>
        <!-- Фон всего окна -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF291010" Offset="0.008"/>
                <GradientStop Color="#FFAD3838" Offset="0.996"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Основной контейнер с двумя колонками -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Левая панель -->
            <ColumnDefinition Width="162*"/>
            <ColumnDefinition Width="163*"/>
            <!-- Основное содержание -->
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <StackPanel Grid.Column="0" Background="#801A0A0A" Margin="10,10,10,10">
            <!-- Hollywood Editor -->
            <Image x:Name="logo_hollywood_png" 
                   Source="/logo_hollywood.png" 
                   Height="80" 
                   Margin="0,10,0,20" 
                   Stretch="Uniform"/>

            <!-- Open/Save -->
            <Button x:Name="open_file" 
                    Content="Открыть" 
                    Height="28" 
                    Width="150"
                    Margin="0,0,0,10"
                    Background="White"
                    FontWeight="Bold"/>

            <Button x:Name="save_file" 
                    Content="Сохранить" 
                    Height="28" 
                    Width="150"
                    Margin="0,0,0,20"
                    Background="White"
                    FontWeight="Bold"/>

            <!-- Информация о версии -->
            <TextBlock Text="for 0.8.53A" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,5"
                       FontSize="10"/>

            <TextBlock x:Name="text_name" 
                       Text="Hollywood Editor" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       FontFamily="Cascadia Code" 
                       FontWeight="Bold"
                       FontSize="12"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Developed by Galapogos" 
                       Foreground="White" 
                       HorizontalAlignment="Center"
                       FontSize="10"
                       Margin="0,0,0,10"/>

        </StackPanel>

        <!-- Правая часть - содержимое -->
        <ScrollViewer Grid.Column="1" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <StackPanel>
                <!-- Группа Студия -->
                <GroupBox x:Name="group_studio" 
                         Header="Студия" 
                         BorderBrush="Black" 
                         FontFamily="Cascadia Code SemiBold"
                         Foreground="White"
                         Margin="0,10,10,20" Width="298" HorizontalAlignment="Left" FontWeight="Bold">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Бюджет -->
                        <Label x:Name="studio_n_money" 
                               Content="Бюджет" 
                               Grid.Row="0" Grid.Column="0"
                               FontWeight="Normal" 
                               FontFamily="Segoe UI"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                        <TextBox x:Name="studio_money" 
                                 Grid.Row="0" Grid.Column="1"
                                 Height="25" 
                                 FontFamily="Segoe UI"
                                 Margin="0,0,0,5"/>

                        <!-- Наличные -->
                        <Label x:Name="studio_n_cash" 
                               Content="Наличные" 
                               Grid.Row="1" Grid.Column="0"
                               FontWeight="Normal" 
                               FontFamily="Segoe UI"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                        <TextBox x:Name="studio_cash" 
                                 Grid.Row="1" Grid.Column="1"
                                 Height="25" 
                                 FontFamily="Segoe UI"
                                 Margin="0,0,0,5"/>

                        <!-- Влияние -->
                        <Label x:Name="studio_n_influence" 
                               Content="Влияние" 
                               Grid.Row="2" Grid.Column="0"
                               FontWeight="Normal" 
                               FontFamily="Segoe UI"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                        <TextBox x:Name="studio_influence" 
                                 Grid.Row="2" Grid.Column="1"
                                 Height="25" 
                                 FontFamily="Segoe UI"
                                 Margin="0,0,0,5"/>

                        <!-- Репутация -->
                        <Label x:Name="studio_n_reputation" 
                               Content="Репутация" 
                               Grid.Row="3" Grid.Column="0"
                               FontWeight="Normal" 
                               FontFamily="Segoe UI"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,10,5"/>
                        <TextBox x:Name="studio_reputation" 
                                 Grid.Row="3" Grid.Column="1"
                                 Height="25" 
                                 FontFamily="Segoe UI"
                                 Margin="0,0,0,5"/>
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>